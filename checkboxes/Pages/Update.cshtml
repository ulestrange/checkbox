@page "{id}"
@model checkboxes.Pages.UpdateModel
@{
}

<h2> Update the Colours</h2>

<form method="post">

    <input asp-for="Decor.ID" hidden>

    @for (int i = 0; i < Model.ColourChoices.Count(); i++)
    {
        <input asp-for="ColoursPicked[i]">
        <label asp-for="ColoursPicked[i]">@Model.ColourChoices[i] </label>
    }

    <button type="submit">Press Me</button>
</form>